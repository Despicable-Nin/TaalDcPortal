@model TaalDc.Portal.ViewModels.Users.UpdateUserViewModel;

@{
    ViewBag.Title = "Update User";
    Layout = "_Layout";

    IEnumerable<string> Roles = (IEnumerable<string>)ViewData["Roles"];
}



<div class="container-fluid">
    <h4 class="primary-color mb-3">
        <strong>
            Update User Account
        </strong>
    </h4>
    <div>
        <form id="userForm" method="post" class="row mb-5 needs-validation" asp-action="Put" asp-route-id="@Model.Id" asp-controller="Users">
            <div class="mb-3 col-lg-8">
                <label asp-for="Username" class="form-label"><strong>Username</strong></label>
                <input asp-for="Username" class="form-control" required/>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>
            <input type="hidden" asp-for="Id"/>
            <div class="mb-3 col-lg-8">
                <label asp-for="Emailaddress" class="form-label"><strong>Email Address</strong></label>
                <input asp-for="Emailaddress" class="form-control" disabled="disabled" required/>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>
          
            
            <div class="mb-3 col-lg-8">
               <label asp-for="Role" class="form-label"><strong>Role</strong></label>
               <select asp-for="Role" class="form-control form-select" required>
                   @foreach (var role in Roles)
                   {
                       <option value="@role">
                           @role
                       </option>
                   }
               </select>
               <div class="invalid-feedback">
                   This is a required field.
               </div>
           </div>

            <div class="col-lg-12">
                <input id="property-form-submit" class="btn btn-primary" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>

