@using TaalDc.Portal.DTO.Sales.Buyer;
@model Buyer_ClientDto

<!--General Info Edit Modal-->
<div class="modal fade" id="spouseFormModal" tabindex="-1" aria-labelledby="spouseFormModal" aria-hidden="true">
    <div class="modal-dialog  modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Spouse Information</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="formLoader">
                    <ul class="formLoading">
                        <li></li>
                        <li></li>
                        <li></li>
                    </ul>
                </div>
                <form class="row needs-validation" method="post" id="spouseForm" asp-action="EditSpouse" asp-controller="Buyers" asp-route-id="@Model.Id">
                    <input name="BuyerId" value="@Model.Id" hidden />
                    <input name="SpouseId" value="@Model.SpouseId" hidden />

                    <div class="col-lg-12">
                        <label class="form-label">
                            <strong>Spouse Name</strong>
                        </label>
                    </div>

                    <div class="mb-3 col-lg-2">
                        <select name="Salutation" class="form-control form-select" required>
                            <option value="Mr.">
                                Mr.
                            </option>
                            <option value="Ms.">
                                Ms.
                            </option>
                            <option value="Mrs.">
                                Mrs.
                            </option>
                        </select>
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="col-lg-10 row px-0">
                        <div class="mb-3 col-lg-4">
                            <input name="FirstName" class="form-control" required placeholder="First Name" />
                            <div class="invalid-feedback">
                                This is a required field.
                            </div>
                        </div>

                        <div class="mb-3 col-lg-4">
                            <input name="MiddleName" class="form-control" placeholder="Middle Name" />
                            <div class="invalid-feedback">
                                This is a required field.
                            </div>
                        </div>


                        <div class="mb-3 col-lg-4">
                            <input name="LastName" class="form-control" required placeholder="Last Name" />
                            <div class="invalid-feedback">
                                This is a required field.
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-12">
                        <label for="DoB" class="form-label">
                            <strong>Date of Birth</strong>
                        </label>
                        <input name="DoB" class="form-control" required type="date" />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12">
                        <label for="EmailAddress" class="form-label">
                            <strong>Email Address</strong>
                        </label>
                        <input name="EmailAddress" class="form-control" required type="email" />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12">
                        <label for="PhoneNo" class="form-label">
                            <strong>Phone No.</strong>
                        </label>
                        <input name="PhoneNo" class="form-control" required />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12">
                        <label for="MobileNo" class="form-label">
                            <strong>Mobile No.</strong>
                        </label>
                        <input name="MobileNo" class="form-control" required />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12">
                        <label for="Occupation" class="form-label">
                            <strong>Occupation</strong>
                        </label>
                        <input name="Occupation" class="form-control" />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12">
                        <label for="TIN" class="form-label">
                            <strong>TIN</strong>
                        </label>
                        <input name="TIN" class="form-control" />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12">
                        <label for="GovIssuedID" class="form-label">
                            <strong>Gov't Issued ID</strong>
                        </label>
                        <input name="GovIssuedID" class="form-control" />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>

                    <div class="mb-3 col-lg-12">
                        <label for="GovIssuedIDValidUntil" class="form-label">
                            <strong>Valid Until</strong>
                        </label>
                        <input name="GovIssuedIDValidUntil" class="form-control" type="date" />
                        <div class="invalid-feedback">
                            This is a required field.
                        </div>
                    </div>


                    <div class="col-lg-12">
                        <input class="btn btn-primary" type="submit" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
