@using TaalDc.Portal.DTO.Catalog;
@using TaalDc.Portal.Models;
@model IEnumerable<UnitTypeDTO>

@{
    ViewBag.Title = "Unit Types";
    Layout = "_Layout";
}

<div class="container-fluid">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link" aria-current="page" asp-controller="Properties" asp-action="Index">Properties</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Properties" asp-action="Towers">Towers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Properties" asp-action="Floors">Floors</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Properties" asp-action="Units">Units</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-controller="Properties" asp-action="UnitTypes">Unit Types</a>
        </li>
    </ul>

    <div class="tab-content">
        <div class="action-section">
            <div class="action-btn text-end">
                <a asp-controller="Properties" asp-action="CreateUnitType" class="btn btn-primary">New Unit Type</a>
            </div>
        </div>

        <div class="data-section">
            <div class="table-responsive w-100 mb-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Unit Type</th>
                            <th>Short Code</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prop in Model)
                        {
                            <tr>
                                <td>@prop.Id</td>
                                <td>@prop.Name</td>
                                <td>@prop.ShortCode</td>
                                <td>
                                    <a class="action-edit" href="#">Edit</a>
                                    <a class="action-delete" href="#">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
