@using TaalDc.Portal.DTO.Catalog
@model UnitUpdate_ClientDto

@{
    ViewBag.Title = "Update Unit";
    Layout = "_Layout";

    List<Floor_ClientDto> floors = ViewBag.Floors;
}


<div class="container-fluid">
    <h4 class="primary-color mb-3">
        <strong>
            @Model.UnitNo
        </strong>
    </h4>

    <div>
        <form id="unitForm" method="post" class="row mb-5 needs-validation" asp-action="EditUnit" asp-route-id="@Model.UnitId" asp-controller="Properties">
            <input type="hidden" asp-for="UnitId"/>
            <div class="mb-3 col-lg-8">
                <label asp-for="UnitTypeId" class="form-label">
                    <strong>Unit Type</strong>
                </label>
                <select asp-for="UnitTypeId" class="form-control form-select" required>
                    <option value="1">
                        Not Applicable
                    </option>
                    <option value="2">
                        One Bedroom
                    </option>
                    <option value="3">
                        Two Bedroom
                    </option>
                    <option value="4">
                        Penthouse
                    </option>
                    <option value="5">
                        Residential Parking
                    </option>
                    <option value="6">
                        Motorcycle Parking
                    </option>
                    <option value="7">
                        Commercial Space
                    </option>
                </select>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>

            <div class="mb-3 col-lg-8">
                <label asp-for="ScenicViewId" class="form-label">
                    <strong>Facing View</strong>
                </label>

                <select asp-for="ScenicViewId" class="form-control form-select" required>
                    <option value="1">
                        Not Applicable
                    </option>
                    <option value="2">
                        TAAL
                    </option>
                    <option value="3">
                        HIGHLANDS
                    </option>
                    <option value="4">
                        MANILA SKYLINE
                    </option>
                    <option value="5">
                        ROTONDA
                    </option>
                </select>

                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>

            <div class="mb-3 col-lg-8">
                <label asp-for="UnitNo" class="form-label">
                    <strong>Unit No.</strong>
                </label>
                <input asp-for="UnitNo" class="form-control" required/>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>

            <div class="mb-3 col-lg-8">
                <label asp-for="FloorId" class="form-label">
                    <strong>Floor No.</strong>
                </label>

                <select asp-for="FloorId" class="form-control form-select" required>
                    @foreach (var floor in floors)
                    {
                        <option value="@floor.Id">
                            @floor.FloorDescription
                        </option>
                    }
                </select>

                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>

            <div class="mb-3 col-lg-8">
                <label asp-for="FloorArea" class="form-label">
                    <strong>Floor Area</strong>
                </label>
                <input id="floorArea" type="decimal" asp-for="FloorArea" class="form-control" required placeholder="0.00"/>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>

            <div class="mb-3 col-lg-8">
                <label asp-for="BalconyArea" class="form-label">
                    <strong>Balcony Area</strong>
                </label>
                <input id="balconyArea" type="decimal" asp-for="BalconyArea" class="form-control" required placeholder="0.00"/>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>

            <div class="mb-3 col-lg-8">
                <label asp-for="SellingPrice" class="form-label">
                    <strong>Selling Price</strong>
                </label>
                <input id="sellingPrice" asp-for="SellingPrice" type="decimal" class="form-control" required placeholder="0.00"/>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>
            <div class="mb-3 col-lg-8">
                <label asp-for="UnitStatusId" class="form-label">
                    <strong>Availability</strong>
                </label>
                <select asp-for="UnitStatusId" class="form-control form-select" required>
                    <option value="1">
                        AVAILABLE
                    </option>
                    <option value="4">
                        BLOCKED
                    </option>
                </select>
                <div class="invalid-feedback">
                    This is a required field.
                </div>
            </div>
            <div class="mb-3 col-lg-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"  asp-for="IsActive">
                    <label class="form-check-label" asp-for="IsActive">
                        Is Active?
                    </label>
                </div>
            </div>
            <div class="col-lg-12">
                <input id="unit-form-submit" class="btn btn-primary" type="submit" value="Save"/>
            </div>
        </form>
    </div>

</div>


@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/common/PJMask.js"></script>
    <script>
        
     
        applyPJMask("#floorArea");
        applyPJMask("#balconyArea");
        applyPJMask("#sellingPrice");

        const form = document.getElementById('unitForm');
        form.addEventListener('submit', onPropertyFormSubmit);

        function onPropertyFormSubmit(event) {
            event.preventDefault();

            var btn = document.getElementById("unit-form-submit");

            btn.disabled = true;

            const data = new FormData(event.target);

            const value = Object.fromEntries(data.entries());

            console.log('form values', value);

            var isFormValid = event.target.checkValidity();

            console.log('form validity', isFormValid);

            event.target.classList.add("was-validated");

            if (isFormValid) {
                var formAction = event.target.action

                $.ajax({
                    type: 'POST',
                    url: formAction,
                    data: value,
                    success: function (data, status, xhr) {
                        console.log('tower post', data);
                        Toastify({
                            text: "Submitted successfully!",
                            duration: 3000,
                            close: true,
                            gravity: "top", // `top` or `bottom`
                            position: "right", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "#6AB0F8",
                            },
                            onClick: function () { } // Callback after click
                        }).showToast();
                            setTimeout(() => window.location.replace("/Properties/Units"),1000);
                    }, error: function () {
                        Toastify({
                            text: "Something went wrong. Please try again later.",
                            duration: 3000,
                            close: true,
                            gravity: "top", // `top` or `bottom`
                            position: "center", // `left`, `center` or `right`
                            stopOnFocus: true, // Prevents dismissing of toast on hover
                            style: {
                                background: "#D01818",
                            },
                            onClick: function () { } // Callback after click
                        }).showToast();

                        btn.disabled = false;
                    }
                });
            } else {
                btn.disabled = false;
            }
            return false;
        }
    </script>

}